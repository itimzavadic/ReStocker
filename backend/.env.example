# База данных
# Формат: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost/restocker

# Telegram Bot
# Токен бота получается от @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Secret Key для валидации WebApp данных
# Генерируется через команду /newappsecret в @BotFather или через Bot API
TELEGRAM_SECRET_KEY=your_secret_key_here

# CORS настройки (разделить запятыми, если несколько)
# Для Telegram Mini App обычно используется: https://web.telegram.org
CORS_ORIGINS=["https://web.telegram.org"]

# API префикс (обычно оставлять по умолчанию)
API_V1_PREFIX=/api/v1

# Настройки подписки
# Пробный период в днях
TRIAL_PERIOD_DAYS=14

# Цена премиум подписки в USD
PREMIUM_PRICE=5.0
